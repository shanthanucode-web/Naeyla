{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "naeyla-native",
  "version": "0.1.0",
  "identifier": "com.shanthanu.naeyla-native",
  "build": {
    "beforeDevCommand": "./launch_backend.sh && npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "NAEYLA",
        "width": 500,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": true,
        "alwaysOnTop": false,
        "windowEffects": {
          "effects": ["underWindowBackground"],
          "state": "active"
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "globalShortcut": {}
  }
}
